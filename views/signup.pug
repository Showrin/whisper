extend layout

block content
    img.bg-container_img(src="/images/background/bg.jpg")

    .bg-container
        .bg-container_logo-div
            img.bg-container_white-logo(src="/images/icons/logo-white.svg")

        .bg-container_login-div
            h1.login-form_title Sign Up

            //- profile pic input
            .login-form_img
                input#js_pro_pic(type="file", accept="image/", name="pro-pic", onchange="showIMG(this);", required)
                img#js_show_pro_pic(src="/images/icons/user.svg")
                label#img_overlay(for="js_pro_pic")
                    img(src="/images/icons/camera.svg")

            label User Name 
                span.form-error-msg (It will be showed to all users)
            input#email(type='name', name='name', autocomplete='off', autocorrect="off", autocapitalize="off" spellcheck="false", required)
            span.form-error-msg 

            label Email
            input#email(type='email', name='email', autocomplete='off', autocorrect="off", autocapitalize="off" spellcheck="false", required)
            span.form-error-msg 

            label Password
            input#password(type='password', name='password', required)
            span.form-error-msg 

            button Sign Up
            span.form-navigate-msg Have an Account? Please 
                a.form-navigate-msg_link(href="/signin") Sign In


block scripts
    script(src="../javascripts/login_script.js")
